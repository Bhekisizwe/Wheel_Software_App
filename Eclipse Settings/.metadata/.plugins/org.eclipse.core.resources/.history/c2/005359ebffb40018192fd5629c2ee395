            $arr_err=array();
            $arr_err["errorCode"]="0x19";
            $arr_err["errorDescription"]="Session has expired";
            $arr_error["errorAssocArray"][19]=$arr_err;
            $assetBO->set($arr_error);
            $arr=$assetBO->getArray();
        }
        $arr_json=json_encode($arr);
