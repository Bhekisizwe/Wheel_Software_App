    				<input type="date" id="startDate" class="form-control" value="2018-01-01" min="2010-01-01" max="2040-01-01"><p>
    				<input type="date" id="endDate" class="form-control" value="2018-01-01" min="2010-01-01" max="2040-01-01"><p>
